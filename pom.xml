    <modelVersion>4.0.0</modelVersion>
    <artifactId>agile</artifactId>
    <packaging>jar</packaging>
    <version>1.0.2.44</version>
    <name>Agile工程</name>
    <description>Agile API平台</description>
    <url>http://192.168.0.55:7777/repository/maven-public/</url>

    <!--资源库-->
    <repositories>
        <repository>
            <id>privateMaven</id>
            <url>http://192.168.0.55:7777/repository/maven-public/</url>
        </repository>
        <repository>
            <id>privateMaven2</id>
            <url>http://127.0.0.1:8081/repository/maven-public/</url>
        </repository>
